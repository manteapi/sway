# set lead key
set $mod Mod4

# set workspace variables
set $WS1 1:Starship
set $WS2 2:Web
set $WS3 3:Mattermost
set $WS4 4:Gitkraken
set $WS5 5:Chat
set $WS6 6
set $WS7 7
set $WS8 8
set $WS9 9
set $WS10 10

input * {
 xkb_layout "fr"
}

# set font
font pango:monospace Mono 8

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

